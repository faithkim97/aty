using UnityEngine;
using System.Collections;
#if UNITY_EDITOR
using UnityEditor;
#endif
public class SetFloat : ExecuteFunction
{
    public StoryVariableFloat variable;
    public Float floatvalue;
    public override string Type()
    {
        return "Set float";
    }
    public override void Function()
    {
        variable.value = floatvalue.GetResult();
    }
    public override void CopyTo(Node other)
    {
        base.CopyTo(other);
        SetFloat temp = other as SetFloat;
        temp.variable = variable;
        temp.floatvalue = temp.parent.nodes[floatvalue.ID] as Float;
    }
    public override void Attach()
    {
        if (attachNode.BaseType() == "Float")
        {
            if (floatvalue != null)
            {
                floatvalue.connectedTo.Remove(this);
            }
            floatvalue = attachNode as Float;
        }
        base.Attach();
    }
    public override Vector3 Left(Node node)
    {
        if (node == floatvalue)
        {
            return new Vector3(pos.x, (2 * pos.y + 95) / 2, 0);
        }
        else
            return base.Left(node);
    }
#if UNITY_EDITOR
    //use a label instead of an Input field
    public override void DrawNode(int id = 0)
    {
        variable = EditorGUILayout.ObjectField("Variable: ", variable, typeof(StoryVariableFloat), true) as StoryVariableFloat;
        if (floatvalue != null)
        {
            GUILayout.Label("Value: " + floatvalue.name);
        }
        else
        {
            GUILayout.Label("Value: null");
        }
        base.DrawNode(id);
    }
#endif
}
