using UnityEngine;
using System.Collections;
#if UNITY_EDITOR
using UnityEditor;
#endif
public class StoryFloat : Float
{
    public StoryVariableFloat variable;
    public override float GetResult()
    {
        if (variable != null)
        {
            return variable.value;
        }
        else
            return 0;
    }
    public override string Type()
    {
        return "StoryFloat";
    }
    public override void CopyTo(Node other)
    {
        StoryFloat temp = (StoryFloat)other;
        temp.variable = variable;
        base.CopyTo(other);
    }
#if UNITY_EDITOR
    //use a label instead of an Input field
    protected override void PrintValue()
    {
        variable = EditorGUILayout.ObjectField("Variable: ", variable, typeof(StoryVariableFloat), true) as StoryVariableFloat;
    }
#endif
}
