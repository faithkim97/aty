using UnityEngine;
using System.Collections;
#if UNITY_EDITOR
using UnityEditor;
#endif
public class Addition : Float
{
    //all the curves on the left side point towards the labels
    public override Vector3 Left(Node node)
    {
        int i = 0;
        for (i = 0; i < referencedBy.Count; i++)
        {
            if (referencedBy[i] == node)
            {
                break;
            }
        }
        return new Vector3(pos.x, (2 * pos.y + 60 + i * 35) / 2, 0);
    }
    //get the sum of all the connected nodes
    public override float GetResult()
    {
        float s = 0;
        for (int i = 0; i < referencedBy.Count; i++)
        {
            Float temp = referencedBy[i] as Float;
            s += temp.GetResult();
        }
        return s;
    }
    public override string Type()
    {
        return "Addition";
    }
    //make sure we're only attaching Floats
    public override void Attach()
    {
        if (attachNode.BaseType() == "Float")
            base.Attach();
        else
            Debug.LogError("Wrong type (should be Float)");
    }
#if UNITY_EDITOR
    //print the name of each connected node
    public override void DrawNode(int id = 0)
    {
        for (int i = 0; i < referencedBy.Count; i++)
        {
            GUILayout.Label("Node " + (i + 1).ToString() + ": " + referencedBy[i].name);
        }
        base.DrawNode(id);
    }
    //use a label instead of an Input field
    protected override void PrintValue()
    {
        value = GetResult();
        GUILayout.BeginHorizontal();
        //push the result onto the right side of the window
        //i really thing there should be an easier way to do this
        GUILayout.FlexibleSpace();
        GUILayout.Label("Value " + value.ToString());
        GUILayout.EndHorizontal();
    }
#endif
}
